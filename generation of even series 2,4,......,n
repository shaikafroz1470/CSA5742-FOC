#include<stdio.h>
 
int main()
{
  	int i, number;
 
  	printf(" Enter the Maximum Limit Value : ");
  	scanf("%d", &number);
  
  	printf(" Even Numbers between 1 and %d are :", number);
  	for(i = 1; i <= number; i++)
  	{
    	if ( i % 2 == 0 ) 
    	{
  			printf(" %d,", i);
    	}
  	}
 
  	return 0;
}
